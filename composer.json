{
  "name": "vardumper/ibexa-automatic-migrations-bundle",
  "description": "Ibexa automatic migrations bundle eliminates the need to manually create migrations for various admin changes. Migration files are automatically generated when settings change in the admin panel.",
  "type": "symfony-bundle",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "vardumper",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ibexa/core": "^5.0",
    "guzzlehttp/promises": "^2.3",
    "nyholm/psr7": "^1.8"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.12",
    "friendsofphp/php-cs-fixer": "^3.89",
    "brainmaestro/composer-git-hooks": "dev-master",
    "rector/swiss-knife": "^2.3",
    "symplify/easy-coding-standard": "^10.3"
  },
  "autoload": {
    "psr-4": {
      "vardumper\\IbexaAutomaticMigrationsBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "vardumper\\IbexaAutomaticMigrationsBundleTests\\": "tests/"
    }
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        ".githooks/pre-commit"
      ],
      "commit-msg": [
        ".githooks/commit-msg"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "scripts": {
    "check-cs": "vendor/bin/ecs check --ansi",
    "fix-cs": "vendor/bin/ecs check --no-ansi --fix",
    "phpstan": "phpstan --memory-limit=1G",
    "post-install-cmd": "@git-hooks-init",
    "post-update-cmd": "@git-hooks-update",
    "swiss-knife-check-conflicts": "vendor/bin/swiss-knife check-conflicts ./config ./modules ./migrations ./plugins --ansi",
    "swiss-knife-check-commented-code": "vendor/bin/swiss-knife check-commented-code ./config ./modules ./migrations ./plugins --line-limit 4 --no-ansi",
    "swiss-knife-find-multi-classes": "vendor/bin/swiss-knife find-multi-classes ./config ./modules ./migrations ./plugins --ansi",
    "swiss-knife-finalize-classes": "vendor/bin/swiss-knife finalize-classes ./config ./modules ./plugins --ansi",
    "swiss-knife-privatize-constants": "vendor/bin/swiss-knife privatize-constants ./config ./modules ./migrations ./plugins --ansi",
    "git-hooks-init": "vendor/bin/cghooks add --ignore-lock",
    "git-hooks-update": "vendor/bin/cghooks update"
  }
}
